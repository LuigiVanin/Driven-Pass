generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  credentials Credential[]
  Wifi        Wifi[]
  Card        Card[]
  SafetyNote  SafetyNote[]

  @@map("users")
}

model Credential {
  id        BigInt   @id @default(autoincrement())
  label     String
  password  String
  url       String
  username  String
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, label])
  @@map("credentials")
}

model Wifi {
  id        Int      @id @default(autoincrement())
  label     String
  name      String
  title     String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("wifi")
}

enum CardType {
  DEBITO
  CREDITO
  AMBOS

  @@map("cardType")
}

model Card {
  id        Int      @id @default(autoincrement())
  label     String
  fullName  String
  number    String
  cvc       String
  type      CardType
  expDate   String
  password  String
  isVirtual Boolean  @default(false)
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([label, userId])
  @@map("cards")
}

model SafetyNote {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(50)
  note      String   @db.VarChar(1000)
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([title, userId])
  @@map("safatyNotes")
}
